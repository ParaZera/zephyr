config QDEC_NXP_S32
	bool "S32-QDEC (NXP) quadrature decoder sensor driver"
	default y
	depends on DT_HAS_NXP_QDEC_S32_ENABLED
	select NXP_S32_EMIOS
	select PINCTRL
	help
	  Enable drivers for NXP S32 QUADRATURE DECODER

config LPADC_TEMP40
	bool "LPADC-TEMP40 (NXP) temperature sensor driver"
	default y
	depends on DT_HAS_NXP_LPADC_TEMP40_ENABLED
	select ADC
	help
	  Enable driver for NXP LPADC_TEMP40 temperature sensor.

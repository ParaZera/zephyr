# Vishay VEML7700 ambient light sensor driver options.

config VEML7700
	bool "VEML7700 (Vishay) ambient light sensor driver"
	default y
	depends on DT_HAS_VISHAY_VEML7700_ENABLED
	select I2C
	help
	  Enable Vishay VEML7700 ambient light sensor driver.

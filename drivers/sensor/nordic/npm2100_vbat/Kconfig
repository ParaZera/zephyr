config NPM2100_VBAT
	bool "NPM2100 (Nordic) battery voltage sensor driver"
	default y
	depends on DT_HAS_NORDIC_NPM2100_VBAT_ENABLED
	select I2C
	select MFD
	help
	  Enable NPM2100 battery voltage driver.
